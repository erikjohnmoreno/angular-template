        .col-md-8.bg-white.no-pdd-horizon
          .row
            .col-md-6
              .full-height.height-100
                .vertical-align.full-height.pdd-horizon-70
                  .table-cell
                    .pdd-horizon-15
                      h1.mrg-btm-30 Create Your account
                      form('[formGroup]'="form" '(ngSubmit)'="onSubmit(form.value)")
                        .form-group
                          label.text-normal.text-dark Email Address
                          input.form-control(type='email' 'formControlName'="email" placeholder="Email")
                          small.text-danger('*ngIf'="form.get('email').invalid && form.get('email').touched") This field is required
                        ng-container('formGroupName'="passwords")
                          .form-group
                            label.text-normal.text-dark Password
                            input.form-control(type='password', placeholder='Password' 'formControlName'="password")
                            small.text-danger('*ngIf'="form.get('passwords.password').invalid && form.get('passwords.password').touched") This field is required
                          .form-group
                            label.text-normal.text-dark Confirm Password
                            input.form-control(type='password', placeholder='Password' 'formControlName'="confirmPassword")
                            small.text-danger('*ngIf'="form.get('passwords.confirmPassword').invalid && form.get('passwords.confirmPassword').touched") This field is required
                            small.text-danger('*ngIf'="form.get('passwords').invalid && (form.get('passwords.password').touched || form.get('passwords.confirmPassword').touched)") Passwords don't match
                        .checkbox.font-size-13.mrg-btm-20
                          input#agreement(name='agreement', type='checkbox', checked='')
                          label(for='agreement') Remember Me
                        .form-group
                          button.btn.btn-primary.btn-block.border-radius-6(type='submit') Create New Account
                      p
                        | Already have an account? 
                        a(href='') Sign In
