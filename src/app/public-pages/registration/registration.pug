    .sign-up
      .row.no-mrg-horizon
        .col-md-4.no-pdd-horizon.d-none.d-md-block
          .full-height.bg(style="background-image: url('assets/images/others/img-31.jpg')")
            .vertical-align.full-height.pdd-horizon-70
              .table-cell
                .row
                  .mr-auto.ml-auto.col-md-10
                    .text-right
                      img.img-responsive.mrg-left-auto.mrg-btm-15(src='assets/images/logo/logo-white.png', alt='', width='170')
                      p.text-white.lead.text-opacity.lh-1-7
