.app.red-background()
  .authentication
    .sign-in-2
      .container-fluid.no-pdd-horizon.bg(style="background-image: url('assets/images/others/img-30.jpg')")
        .row
          .col-md-10.mr-auto.ml-auto
            .row
              .mr-auto.ml-auto.full-height.height-100
                .vertical-align.full-height
                  .table-cell
                    .card
                      .card-body
                        .pdd-horizon-30.pdd-vertical-30
                          .mrg-btm-30
                            img.img-responsive.inline-block(src='assets/images/logo/logo.png', alt='')
                            h2.inline-block.pull-right.no-mrg-vertical.pdd-top-15 Login
                          p.mrg-btm-15.font-size-13 Please enter your user name and password to login
                          form.ng-pristine.ng-valid('[formGroup]'="form" '(ngSubmit)'="onSubmit(form.value)")
                            .form-group
                              input.form-control(type='email', placeholder='User name' 'formControlName'="email")
                            .form-group
                              input.form-control(type='password', placeholder='Password' 'formControlName'="password")
                            .checkbox.font-size-13.inline-block.no-mrg-vertical.no-pdd-vertical
                              input#agreement(name='agreement', type='checkbox')
                              label(for='agreement') Keep Me Signed In
                            .pull-right
                              a(href='') Forgot Password?
                            .mrg-top-20.text-right
                              button.btn.btn-info(type="submit") Login
